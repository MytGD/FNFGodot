[sub_resource type="GDScript" id="GDScript_eujyj"]
script/source = "@tool
extends Button
@onready var range = $\"..\"
var _press_time: float
var _is_holding: bool = false
func _process(delta: float) -> void:
	if button_pressed: 
		_press_time += delta*10 if _is_holding else delta
		if _press_time >= 0.8: 
			_is_holding = true
			_press_time = 0.0
			range.addValue()

func _on_button_up() -> void:
	_is_holding = false
	_press_time = 0.0
"

